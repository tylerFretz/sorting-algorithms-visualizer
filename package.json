{
	"name": "sorting-visualizer",
	"version": "1.0.0",
	"description": "express server for sorting algorithms visualizer",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "ts-node-dev index.ts",
		"start": "NODE_ENV=production node index.ts",
		"start:prod": "cross-env NODE_ENV=production node index.ts",
		"build:client": "cd client && npm run build",
		"lint": "eslint --ext .js,.jsx,.ts,.tsx src --color",
		"lint:client": "cd client && npm run lint",
		"lint:all": "npm run lint && npm run lint:client",
		"format": "prettier --write src/**/*.{ts,tsx,scss,css,json}",
		"tsc": "tsc"
	},
	"keywords": [
		"sorting",
		"algotithms",
		"nodejs",
		"express",
		"github-actions"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.12",
		"@types/node": "^16.0.0",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"cross-env": "^7.0.3",
		"eslint": "^7.30.0",
		"prettier": "^2.3.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.5"
	}
}